#!/bin/bash

# deactivate/activate macOS Dock by moveing it to the top

current=$(defaults read com.apple.Dock orientation)

if [[ "$current" == "top" ]]; then
  defaults write com.apple.Dock orientation -string left
  echo "activated ðŸŒœ"
else
  defaults write com.apple.Dock orientation -string top
  echo "deactivated ðŸŒš"
fi
